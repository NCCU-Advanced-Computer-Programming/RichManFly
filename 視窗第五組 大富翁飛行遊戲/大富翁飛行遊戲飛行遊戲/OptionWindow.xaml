<Window x:Class="飛行遊戲.OptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="場景選擇" Height="230" Width="259" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid Margin="0,0,0,-10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="213*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>
        <RadioButton x:Name="sky" Content="馬路" HorizontalAlignment="Left" Margin="31,51,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="universe" Content="沙漠" Margin="31,79,38,0" VerticalAlignment="Top"/>
        <Button x:Name="enter" Content="確定" HorizontalAlignment="Left" Margin="141,154,0,0" VerticalAlignment="Top" Width="102" Height="37" Click="Confirm" RenderTransformOrigin="0.857,2.311" Grid.ColumnSpan="2"/>
        <Label Content="場景選擇：" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" FontSize="14"/>
        <RadioButton x:Name="grass" Content="海洋" HorizontalAlignment="Left" Margin="31,107,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="dessert" Content="世界" HorizontalAlignment="Left" Margin="31,135,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
